<div>
  <div>
    <h2>Login</h2>

    <% if flash[:error] %>
      <div><%= flash[:error] %></div>
    <% end %>

    <%= form_tag root_path do %>
      <%= email_field_tag( :email, nil, placeholder: 'Email' ) %>
      <%= password_field_tag( :password, nil, placeholder: 'Password' ) %>
      <%= submit_tag 'Submit' %>
    <% end %>
  </div>
</div>