<div class="edit-form-container">

  <h2>Edit your profile</h2>

  <%= form_for @current_user do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :bio %>
      <%= f.text_field :bio %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit %>
  <% end %>

</div>